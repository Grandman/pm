<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @task.name %>
</p>
<% if @task.has_children? %>
  <p>Subtasks</p>
  <% @task.descendants.each do |subtask| %>
    <p style="padding-left:<%= subtask.depth*10%>px;"><%= link_to subtask.name, [@project, subtask] %></p>
  <% end %>
<% end %> 
<% if @task.users %>
<p> Users: </p>
<% @task.users.each do |user| %>
<%= user.email %> <br>
<% end %>
<% end %>
<%= link_to 'Add subtask', new_project_task_path(@project,parent: @task) %> |
<%= link_to 'Edit', edit_project_task_path(@project, @task) %> |
<%= link_to 'Destroy',  project_task_path(@project, @task), method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to 'Back', [@project]%>
